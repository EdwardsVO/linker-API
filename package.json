    "eslint-config-prettier": "^8.3.0",
    "express": "^4.17.1",
    "graphql": "^15.6.1",
    "graphql-compose": "^9.0.3",
    "graphql-compose-mongoose": "^9.7.0",
    "helmet": "^4.6.0",
    "husky": "^7.0.2",
